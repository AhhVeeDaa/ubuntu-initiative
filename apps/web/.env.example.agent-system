# Ubuntu Initiative - Environment Variables
# Copy this to .env.local and fill in your values

# =====================================================
# Supabase Configuration
# =====================================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Public URL (safe to expose to client)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Anon/Public key (safe to expose to client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Service Role key (NEVER expose to client - server-side only)
# Used by agents for full database access
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =====================================================
# Stripe Configuration
# =====================================================
# Get these from: https://dashboard.stripe.com/apikeys

# Secret key (server-side only)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Publishable key (client-side safe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Webhook signing secret (from Stripe webhooks dashboard)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =====================================================
# Google AI (for Inga GPT)
# =====================================================
# Get from: https://makersuite.google.com/app/apikey

GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key

# =====================================================
# Agent Network Configuration
# =====================================================

# Agent execution mode (production | development)
AGENT_EXECUTION_MODE=development

# Auto-approval confidence threshold (0.0-1.0)
# Milestones/policies above this confidence publish automatically
AGENT_AUTO_APPROVAL_THRESHOLD=0.90

# Fraud detection threshold (USD)
# Donations above this amount are flagged for review
FRAUD_DETECTION_THRESHOLD=10000

# Enable agent audit logging
AGENT_AUDIT_LOGGING=true

# =====================================================
# External API Keys (for future agents)
# =====================================================

# GitHub Personal Access Token (for milestone ingestion)
# Create at: https://github.com/settings/tokens
# GITHUB_PAT=ghp_your_github_token

# Twitter/X API (for social media monitoring)
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET=your_twitter_api_secret

# World Bank API (no key required, but rate limits apply)
# https://datahelpdesk.worldbank.org/knowledgebase/articles/889392

# =====================================================
# Email Configuration (for notifications)
# =====================================================

# Email service (sendgrid | resend | ses)
# EMAIL_PROVIDER=sendgrid

# SendGrid API Key
# EMAIL_API_KEY=your_sendgrid_api_key

# From email address
# EMAIL_FROM=notifications@ubuntu-initiative.org

# =====================================================
# Application Configuration
# =====================================================

# Site URL (for webhooks and callbacks)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# =====================================================
# Security & Rate Limiting
# =====================================================

# JWT secret for session management
# JWT_SECRET=your_random_secret_string

# API rate limit (requests per minute)
# API_RATE_LIMIT=100

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://ubuntu-initiative.org

# =====================================================
# Monitoring & Analytics
# =====================================================

# Vercel Analytics (automatically configured if deployed on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_analytics_id

# Sentry DSN (for error tracking)
# SENTRY_DSN=your_sentry_dsn

# =====================================================
# Feature Flags
# =====================================================

# Enable real-time donation tracker
FEATURE_REALTIME_DONATIONS=true

# Enable approval queue dashboard
FEATURE_APPROVAL_QUEUE=true

# Enable policy tracking
FEATURE_POLICY_TRACKING=false

# Enable research synthesis
FEATURE_RESEARCH_SYNTHESIS=false

# Enable community signals
FEATURE_COMMUNITY_SIGNALS=false
